<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="ds.confineme.systemScan"
    android:id="@+id/relLay"
    android:background="#00ffd3ed">

    <TextView android:text="System Scan" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sysStatus"
        android:background="#fffefdff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/sysButton"
        android:nestedScrollingEnabled="true"
        android:textIsSelectable="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Scan"
        android:id="@+id/sysButton"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="systemScanClicked"
        android:layout_alignWithParentIfMissing="false"
        android:background="#ff25b7ff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:enabled="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Recommendations"
        android:id="@+id/sysReco"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="sysGetRecoClicked"
        android:layout_alignWithParentIfMissing="false"
        android:background="#ff25b7ff"
        android:layout_below="@+id/sysButton"
        android:layout_centerHorizontal="true"
        android:enabled="true" />

</RelativeLayout>
