<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="ds.confineme.overall"
    android:id="@+id/fullsys">

    <TextView android:text="Full System Scan" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overallStat"
        android:longClickable="true"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="true"
        android:layout_above="@+id/overallbutton" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Scan"
        android:id="@+id/overallbutton"
        android:background="#ff25b7ff"
        android:clickable="true"
        android:enabled="true"
        android:longClickable="true"
        android:onClick="fullSystScanClicked"
        android:nestedScrollingEnabled="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:outlineProvider="paddedBounds" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Recommendations"
        android:id="@+id/overallReco"
        android:background="#ff25b7ff"
        android:clickable="true"
        android:enabled="true"
        android:longClickable="true"
        android:onClick="getoverallRec"
        android:layout_alignTop="@+id/overallbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />


</RelativeLayout>
